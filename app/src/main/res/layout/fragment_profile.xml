<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment"
    android:background="@color/color_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="-65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="65dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_marginHorizontal="22dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="24sp"
                                android:textColor="@color/color_text_main"
                                android:text="@string/text_main_profile"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/open_sans"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_layout"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/imageProfileAvatar"
                                        android:layout_width="@dimen/_55sdp"
                                        android:layout_height="@dimen/_55sdp"
                                        android:scaleType="centerCrop"
                                        app:riv_oval="true"
                                        android:layout_marginHorizontal="10dp"
                                        android:src="@drawable/icon_avatar"
                                        tools:ignore="MissingClass" />

                                    <TextView
                                        android:id="@+id/textNameProfile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="20sp"
                                        android:textColor="@color/color_text_main"
                                        android:text="Артём Сокерин"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="30dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/icon_edit"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/text_edit"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/icon_achevments"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_gravity="center" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="@color/color_text_second"
                                            android:text="@string/text_your_achievements"
                                            android:textStyle="bold"
                                            android:gravity="left|center"
                                            android:paddingVertical="10dp"
                                            android:layout_marginHorizontal="5dp"
                                            android:fontFamily="@font/open_sans"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="@color/color_text_achiv_number"
                                            android:text="0"
                                            android:textStyle="bold"
                                            android:gravity="left|center"
                                            android:paddingVertical="10dp"
                                            android:layout_marginHorizontal="5dp"
                                            android:fontFamily="@font/open_sans"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textOutProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/color_main"
                                android:text="@string/text_out_account"
                                android:textStyle="bold"
                                android:fontFamily="@font/open_sans"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="15dp"
                                android:padding="3dp"
                                android:foreground="?attr/selectableItemBackground"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>