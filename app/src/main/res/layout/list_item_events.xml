<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_edit_text"
        app:cardCornerRadius="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/imageEventsItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/poster_prototype"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textItemArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/color_text_main"
            android:text="Нижний Новгород"
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/open_sans"/>

        <TextView
            android:id="@+id/textItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_for_item"
            android:text="Описание: Доработка стартапов, свзязанных с технологией 5G и edge computing."
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/open_sans"/>

        <TextView
            android:id="@+id/textItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_for_item"
            android:text="Для участников: WEB, data science "
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/open_sans"/>

        <TextView
            android:id="@+id/textItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_for_item"
            android:text="Дата: 19.10.2022"
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/open_sans"/>

        <TextView
            android:id="@+id/textItemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_for_item"
            android:text="Время: старт в 18:00"
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/open_sans"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonItemMore"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:backgroundTint="@color/color_main"
            android:fontFamily="@font/open_sans"
            android:padding="10dp"
            android:text="@string/text_button_more"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:cornerRadius="35dp"
            android:textAllCaps="false"
            android:textAppearance="?attr/textAppearanceBody2"/>

    </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>