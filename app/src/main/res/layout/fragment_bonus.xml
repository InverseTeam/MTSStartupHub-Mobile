<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BonusFragment"
    android:background="@color/color_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="-65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="65dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_marginHorizontal="22dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="24sp"
                                android:textColor="@color/color_text_main"
                                android:text="@string/text_main_bonus"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/open_sans"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewSoob"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="30dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_comminicates"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/text_communities"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewBonus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardBackgroundColor="@color/color_edit_text"
                                    app:cardCornerRadius="20dp"
                                    android:layout_marginHorizontal="25dp"
                                    android:layout_marginTop="20dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginVertical="15dp"
                                        android:layout_marginHorizontal="15dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/icon_bonus2"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="22sp"
                                            android:textColor="@color/color_text_second"
                                            android:text="@string/text_stuff"
                                            android:textStyle="bold"
                                            android:gravity="left|center"
                                            android:paddingVertical="10dp"
                                            android:layout_marginHorizontal="5dp"
                                            android:fontFamily="@font/open_sans"/>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewFinance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_finance"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/text_mts_events"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewMyMero"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_my_events"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/text_my_events"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewUp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/color_edit_text"
                                app:cardCornerRadius="20dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="15dp"
                                    android:layout_marginHorizontal="15dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_up"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="22sp"
                                        android:textColor="@color/color_text_second"
                                        android:text="@string/text_up_komp"
                                        android:textStyle="bold"
                                        android:gravity="left|center"
                                        android:paddingVertical="10dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:fontFamily="@font/open_sans"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>